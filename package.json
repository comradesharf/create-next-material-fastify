{
    "name": "hearthstone-deck-tracker",
    "version": "1.0.0",
    "main": "index.js",
    "author": "hishammuddin-sani <mohd.hishammuddin.abd.sani@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@material-ui/core": "^3.9.2",
        "@material-ui/icons": "^3.0.2",
        "fastify": "^2.1.0",
        "fastify-plugin": "^1.5.0",
        "jss": "^9.8.7",
        "next": "^8.0.3",
        "next-with-typescript": "^1.0.0",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-jss": "^8.6.1",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.0.3",
        "tsconfig-paths": "^3.8.0",
        "typescript": "^3.3.3333"
    },
    "scripts": {
        "dev": "nodemon server/index.ts",
        "build": "next build",
        "start": "NODE_ENV=production ts-node --files --compiler-options '{\"module\":\"commonjs\"}' server/index.ts"
    },
    "devDependencies": {
        "@types/next": "^8.0.1",
        "@types/node": "^10.14.1",
        "@types/react": "^16.8.8",
        "@types/react-jss": "^8.6.3",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "nodemon": "^1.18.10",
        "pino-pretty": "^2.5.0",
        "prettier": "^1.16.4",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.14.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --single-quote --write",
            "git add"
        ]
    },
    "engines": {
        "node": ">=10.15.3"
    },
    "prettier": {
        "printWidth": 80,
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "arrowParens": "always"
    },
    "nodemonConfig": {
        "watch": [
            "server/**/*.ts"
        ],
        "execMap": {
            "ts": "ts-node --files -r tsconfig-paths/register --type-check --compiler-options '{\"module\":\"commonjs\"}'"
        }
    }
}
